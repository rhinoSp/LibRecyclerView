<?xml version="1.0" encoding="utf-8"?>
        

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" android:tag="layout/layout_pull_down_refresh_header_0">

        <LinearLayout
            android:id="@+id/ll_header_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_header_progress"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_pull_refreshing" />

            <TextView
                android:id="@+id/tv_header_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pull refresh"
                android:textColor="#2C2C2C"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

         